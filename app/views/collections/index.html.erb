<% @meta_title = 'Личные коллекции' %>

<div class="container">
  <div class="row">

    <div class="col-lg-12">
      <div class="page-header">
        <h1><%= @meta_title %></h1>
      </div>
    </div>

    <div class="col-sm-7 col-md-6 col-lg-5">

      <%= link_to "Новая коллекция", main_app.new_collection_path, class: "btn btn-success btn-lg" %>

      <br>
      <br>

      <% @collections.each do |collection| %>
        <%= render collection %>
      <% end %>

    </div>
  </div>
</div>
